config system
    option hostname	oakridge
    option timezone CST-8
    option zonename Asia/Shanghai
    option conloglevel 8
    option klogconloglevel 8
    option cronloglevel 8
    option log_type circular
    option log_file /var/log/messages
    option log_size 128
    option log_remote 0
    option log_ip 0.0.0.0
    option log_prefix oakridge
    option ttylogin 0

config timeserver ntp
	list server	time.nist.gov
	list server	time.windows.com
	option enable_server 1 

