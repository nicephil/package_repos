config system
    option hostname	oakridge
    option timezone CST-8
    option zonename Asia/Shanghai
    option conloglevel 6
    option klogconloglevel 6
    option cronloglevel 6
    option log_type circular
    option log_file /var/log/messages
    option log_size 128
    option log_remote 0
    option log_ip 0.0.0.0

config timeserver ntp
	list server	time.nist.gov
	list server	time.windows.com
	option enable_server 1 

config button
    option button 'reset'
    option action 'released'
    option handler 'reboot'
    option min '0'
    option max '3'

config button
    option button 'reset'
    option action 'released'
    option handler 'echo RESTORY FACTORY CONFIGRARION > /dev/console ; firstboot ; reboot'
    option min '4'
    option max '60'
