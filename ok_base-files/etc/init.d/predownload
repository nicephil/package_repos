#!/bin/sh /etc/rc.common

START=99


stop ()
{
    pid=`pgrep -f "wget -c $imgurl"`
    [ -n "$pid" ] &&  kill $pid
}


start ()
{
    [ -f "/overlay/root/imgurl" ] && { 
        imgurl="`cat /overlay/root/imgurl`"
        dd if=/dev/zero of=/overlay/root/dump count=128 bs=1k conv=fsync
        if [ "$?" = "0" ]
        then
            (sleep 600;wget -c "$imgurl" -O "/overlay/root/${imgurl##*/}" 2>&1 | logger -t 'predownload') & 
        fi
    }
}

