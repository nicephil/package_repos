config defaults
	option syn_flood	1
	option input		ACCEPT
	option output		ACCEPT
	option forward		REJECT
# Uncomment this line to disable ipv6 rules
	option disable_ipv6	1

config zone
	option name		TRUSTED
	#list network		'lan4053'
	option input		ACCEPT
	option output		ACCEPT
	option forward		ACCEPT

config zone
    option name		UNTRUSTED
    list network		'wan'
    list network		'wan1'
    list network      'wan2'
	option input		REJECT
	option output		ACCEPT
	option forward		REJECT
	option masq		1
	option mtu_fix		1

config zone
	option name		DMZ
	#list network		'lan4053'
	option input		ACCEPT
	option output		ACCEPT
	option forward		REJECT

config zone
	option name		GUEST
	#list network		'lan4053'
	option input		REJECT
	option output		ACCEPT
	option forward		REJECT

config forwarding
	option src		TRUSTED
	option dest		UNTRUSTED

# We need to accept udp packets on port 68,
# see https://dev.openwrt.org/ticket/4108
config rule
	option name		Allow-DHCP-Renew
	option src		UNTRUSTED
	option proto		udp
	option dest_port	68
	option target		ACCEPT
	option family		ipv4

# Allow IPv4 ping
config rule
	option name		Allow-Ping
	option src		UNTRUSTED
	option proto		icmp
	option icmp_type	echo-request
	option family		ipv4
	option target		ACCEPT

# include a file with users custom iptables rules
config include
	option path /etc/firewall.user


### EXAMPLE CONFIG SECTIONS


# port redirect of remapped ssh port (22001) on UNTRUSTED
config redirect
    option name     'SSH-to-GW'
	option src		UNTRUSTED
	option src_dport	22001
    option dest     TRUSTED
	option dest_port	22
	option proto		tcp
    option target       'DNAT'


