config system system
    option hostname	oakridge
    option timezone UTC
    option zonename UTC
    option conloglevel 8
    option klogconloglevel 8
    option cronloglevel 8
    option log_type circular
    option log_file /var/log/messages
    option log_size 128
    option log_remote 1
    option log_ip 'log.oakridge.vip'
    option config_version_webui '-1'

config timeserver ntp
	list server	pool.ntp.org
	list server	cn.ntp.org.cn
	option enable_server 1 

config button button1
    option button 'reset'
    option action 'released'
    option handler 'echo REBOOT > /dev/console;reboot'
    option min '0'
    option max '3'

config button button2
    option button 'reset'
    option action 'released'
    option handler 'echo RESTORY FACTORY CONFIGRARION > /dev/console; firstboot; reboot -f '
    option min '4'
    option max '60'

